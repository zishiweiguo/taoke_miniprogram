.intro {
  margin: 30px;
  text-align: center;
}

.product {
  width: 96%;
  height: auto;
  margin-left: 2%;
  padding-top: 10rpx;
}

.product .pro {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  float: left;
}

.product .item {
  width: 200rpx;
  height: 200rpx;
  display:inline-block;
  margin-left: 10rpx;
}

.product .item image {
  width: 200rpx;
  height: 160rpx;
  display: block;
}

.product .item .name {
  width: 200rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display:inline-block;
}


.news .item .riqi {
  float: right;
  margin-right: 10rpx;
  color: #666;
}

.search {
  width: 80%;
  height: 60rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 30rpx;
}

.search button {
  float: right;
  width: 30%;
  border: 0;
  height: 62rpx;
  font-size: 24rpx;
  line-height: 62rpx;
  color: #fff;
}

.search input {
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin-left: 5%;
  float: left;
}

.tt {
  border:1px solid black;
  padding: 10rpx;
}